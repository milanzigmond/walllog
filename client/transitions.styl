@import 'nib'
@import 'styl/colors'

body {
  font-family: Roboto;
  font-weight: 300
}

.addWallpaper {
  position: fixed;
  right: 28px;
  top: 164px;
  z-index: 1;
  background: accentColor
}

#dropShadow {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6px;
  box-shadow: inset 0px 5px 6px -3px rgba(0, 0, 0, 0.4);
}

.card {
  display: inline-block;
  background: white;
  box-sizing: border-box;
  width: 100px;
  height: 100px;
  margin: -2px;
  padding: 16px;
  border-radius: 0px;
}

