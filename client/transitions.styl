@import 'nib'

/* Palette generated by Material Palette - materialpalette.com/teal/amber */

darkPrimaryColor =   #00796B
primaryColor =       #009688
lightPrimaryColor =  #B2DFDB
textPrimaryColor =   #FFFFFF
accentColor =        #FFC107
primaryTextColor =   #212121
secondaryTextColor = #727272
dividerColor =       #B6B6B6

body {
  font-family: Roboto;
  font-weight: 300
}

.card {
  display: inline-block;
  background: white;
  box-sizing: border-box;
  width: 100px;
  height: 100px;
  margin: -2px;
  padding: 16px;
  border-radius: 0px;
}

// admin

core-icon {
  margin-right: 15px;
}

core-header-panel {
  background-color #eee
  color white
}

body /deep/ core-toolbar {
  background-color darkPrimaryColor
  color white
}

core-menu, core-animated-pages, core-pages {
  color primaryTextColor
}

paper-item.core-selected 
  color primaryTextColor
  background-color accentColor
  
paper-item::shadow #ripple {
  color: primaryColor;
}
