@import 'nib'

/* Palette generated by Material Palette - materialpalette.com/teal/amber */

darkPrimaryColor =   #455A64
primaryColor =       #607D8B
lightPrimaryColor =  #CFD8DC
textPrimaryColor =   #212121
accentColor =        #03A9F4
primaryTextColor =   #212121
secondaryTextColor = #727272
dividerColor =       #B6B6B6

body {
  font-family: Roboto;
  font-weight: 300
}

.wallpaperCard { 
  margin: 40px 90px 0px 6px; 
  background: #FAFAFA;
  box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.12), 0px 2px 2px 0px rgba(0,0,0,0.24);
  border-radius: 2px;
  font-size: 24px;
  line-height: 24px;
  > img {
    width:100%;
  }
}

.addWallpaper {
  position: fixed;
  right: 28px;
  top: 164px;
  z-index: 1;
  background: accentColor
}

#dropShadow {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6px;
  box-shadow: inset 0px 5px 6px -3px rgba(0, 0, 0, 0.4);
}

.card {
  display: inline-block;
  background: white;
  box-sizing: border-box;
  width: 100px;
  height: 100px;
  margin: -2px;
  padding: 16px;
  border-radius: 0px;
}

// admin

#drawer-panel core-icon {
  margin-right: 10px;
}

core-header-panel {
  background-color #eee
  height: 100%
}

body /deep/ core-toolbar {
  background-color primaryColor
  color white
}

core-menu, core-animated-pages, core-pages {
  color primaryTextColor
}

paper-item.core-selected 
  color white
  background-color accentColor
  
paper-item::shadow #ripple {
  color: white;
}
