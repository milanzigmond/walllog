@import 'nib'
@import '../styl/colors'

#view
  cursor initial

.userCard
  position fixed
  right 40px
  top 40px
  height auto
  background rgba(0,0,0,0.5)
  background-size 100% 100%
  color white
  box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.12), 0px 2px 2px 0px rgba(0,0,0,0.24)
  border-radius 2px 2px 2px 2px
    
#userCardIcons
  position fixed
  right 40px
  top 40px
  height auto
  z-index 1
  color white
  padding 5px
  .username
    padding 0px 15px

#userCard
  z-index -30 !important
  left 50%
  
#likesWrapper
  margin 73px 0px 20px 0px
  #likeImage
    margin 0px 20px
  