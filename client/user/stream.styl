@import 'nib'
@import '../styl/colors'

opacity(n)
  -khtml-opacity n
  -moz-opacity n
  opacity n

core-animated-pages
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  section > div
	  height 100%
   
.addUser
  position fixed
  right 40px
  top 40px
  z-index 1
  // background rgba(255,255,255,0.75)
  background rgba(0,0,0,0.4)
  color white

.smallCard
  position absolute
  left 60px
  bottom 60px
  right 60px
  max-width 600px
  background rgba(0,0,0,0.5)
  // background #03A9F4
  color white
  box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.12), 0px 2px 2px 0px rgba(0,0,0,0.24)
  border-radius 2px
  > img
    width 100%
    
#link
  > a
    text-decoration none
    color white
    