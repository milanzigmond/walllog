@import 'nib'
@import 'styl/colors'

.icons
  padding 5px
  margin 50px 0px 0px 0px

.userCard
  position fixed
  right 40px
  top 80px
  z-index 1
  background rgba(0,0,0,0.2)
  color white
  box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.12), 0px 2px 2px 0px rgba(0,0,0,0.24)
  border-radius 2px 2px 2px 2px
  > img
    position absolute
    top -55px
    width 90px
    border-radius 90px
    margin 10px 10px 0px 10px