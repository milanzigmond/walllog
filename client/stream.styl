@import 'nib'
@import 'styl/colors'

opacity(n)
  -khtml-opacity n
  -moz-opacity n
  opacity n

core-animated-pages
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  section > div
	  height 100%
   
.addUser
  position fixed
  right 40px
  top 40px
  z-index 1
  // background rgba(255,255,255,0.75)
  background rgba(0,0,0,0.2)
  color white

.bgImage
  background-repeat no-repeat
  background-attachment fixed
  background-position center
  background-size cover

.smallCard
  position absolute
  bottom 0px
  left 0px
  width 600px
  margin-bottom 60px
  margin-left 60px
  // background rgba(255,255,255,0.75)
  background rgba(0,0,0,0.2)
  color white
  box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.12), 0px 2px 2px 0px rgba(0,0,0,0.24)
  border-radius 2px
  > img
    width 100%
    
#link
  > a
    text-decoration none
    color white
    